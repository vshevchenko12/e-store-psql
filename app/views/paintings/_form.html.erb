<%= simple_form_for(@painting, html: { multipart: true }
) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :title, required: true, input_html: {class: "input"}, wrapper: false %>
    <%= f.input :size, required: true, input_html: {class: "input"}, wrapper: false %>
    <%= f.input :materials, required: true, input_html: {class: "input"}, wrapper: false %>
    <%= f.input :description, required: true, input_html: {class: "textarea"}, wrapper: false
 %>
    <%= f.input :price, required: true, input_html: {class: "input", maxlenghth: 7}, wrapper: false
 %>
    <%= f.input :image, as: :file, input_html: { class:"file-input painting-image" }, wrapper: false %>
  </div>
  <output id="list"></output>
  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-outline-warning" %>
  </div>
<% end %>
