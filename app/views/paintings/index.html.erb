<div id="paintings" class='mb-5'>
  <div class="painting-index-grid pt-4">
    <% @paintings.each do |painting| %>
      <div class="painting">
        <div class="painting-thumb">
          <%= link_to image_tag(painting.image_url(:thumb)), painting, class: 'painting-image' %>
        </div>
        <div class="p-3">
          <h3 class="fw-bold fs-4 title"><%= painting.title %></h3>
          <p class="fs-3 fw-bold pt-2 price"><%= number_to_currency(painting.price) %></p>
          <% if painting_author(painting) %>
            <div class="d-flex mt-3">
              <%= link_to 'Edit', edit_painting_path(painting), class: "btn btn-outline-warning btn-sm me-1" %>
              <%= button_to "Delete", painting, form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class:'btn btn-outline-danger btn-sm' %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
